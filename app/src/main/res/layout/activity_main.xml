<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/GoBoomTitle"
        android:layout_width="870dp"
        android:layout_height="207dp"
        android:layout_marginStart="207dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="207dp"
        android:capitalize="characters"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="10sp"
        android:password="false"
        android:phoneNumber="false"
        android:stateListAnimator="@android:anim/slide_in_left"
        android:text="GO BOOM"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="526dp"
        android:layout_marginBottom="97dp"
        android:text="START"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GoBoomTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>